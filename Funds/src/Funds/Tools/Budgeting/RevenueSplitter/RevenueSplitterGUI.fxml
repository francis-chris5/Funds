<AnchorPane id="AnchorPane" prefHeight="523.0" prefWidth="639.0" stylesheets="@../../../Stylesheets/FundStyle.css" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox layoutX="14.0" layoutY="41.0" prefHeight="420.0" prefWidth="262.0">
         <children>
            <Label text="Available Accounts" />
            <ListView fx:id="lstAccounts" prefHeight="119.0" prefWidth="244.0" styleClass="account-list">
               <VBox.margin>
                  <Insets left="8.0" />
               </VBox.margin>
            </ListView>
            <HBox prefHeight="54.0" prefWidth="252.0" spacing="12.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#selectAccounts" text="Select" />
                  <Button mnemonicParsing="false" text="Calculate" />
                  <Button mnemonicParsing="false" onAction="#saveSplit" text="Save Split" />
               </children>
               <padding>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </padding>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
      <VBox layoutY="231.0" prefHeight="254.0" prefWidth="671.0">
         <children>
            <HBox prefHeight="8.0" prefWidth="338.0">
               <children>
                  <VBox prefHeight="52.0" prefWidth="145.0">
                     <children>
                        <Label text="Split Amount" />
                        <TextField fx:id="txtSplitAmount">
                           <VBox.margin>
                              <Insets left="8.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <VBox prefHeight="52.0" prefWidth="140.0">
                     <children>
                        <Label text="Split Name" />
                        <TextField fx:id="txtSplitName">
                           <VBox.margin>
                              <Insets left="8.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <VBox prefHeight="100.0" prefWidth="166.0">
                     <children>
                        <Label text="Moving Amount" />
                        <TextField fx:id="txtMoveAmount" editable="false">
                           <VBox.margin>
                              <Insets left="8.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#calculateTransfers" text="Calculate Transfers">
                     <HBox.margin>
                        <Insets top="18.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <ScrollPane prefHeight="255.0" prefWidth="614.0">
               <content>
                  <VBox fx:id="vbxControls" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
      <VBox layoutX="320.0" layoutY="41.0" prefHeight="150.0" prefWidth="262.0" spacing="3.0">
         <children>
            <Label text="Saved Splits" />
            <ListView fx:id="lstSplits" onContextMenuRequested="#removeSavedSplit" onMouseClicked="#openSplit" prefHeight="118.0" prefWidth="244.0" styleClass="account-list">
               <VBox.margin>
                  <Insets left="8.0" />
               </VBox.margin>
            </ListView>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
